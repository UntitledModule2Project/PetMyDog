<div class="dog-container">
    <article>
        <div>
            <h3>{{dog.name}}</h3>
            <img src="/{{dog.photo}}" alt="dogPhoto">
            <p>Breed: {{dog.breed}}</p>
            <p>Age: {{dog.age}}</p>
            <p>Owner: {{dog.owner.username}}</p>
            <p>Description:
                <br> {{dog.description}}</p>
            <p>Comments:
                <ul>
                    {{#each comments}}
                    <li>{{comment}} - {{user_id.username}}</li>
                    {{/each}}
                </ul>
            </p>
            {{>commentFormPartial}}
            <div class="options">
                {{#if user.isAdmin}}
                <a href="/dog/delete/{{dog._id}}">Delete dog </a>
                <a href="/dog/edit/{{dog._id}}">Edit dog </a>
                {{/if}} {{#if isOwner}}
                <a href="/dog/delete/{{dog._id}}">Delete dog </a>
                <a href="/dog/edit/{{dog._id}}">Edit dog </a>
                {{/if}}
                <a href="/dog/schedule/{{dog._id}}">Pet this dog </a>
            </div>
            {{#if user}}
            <a href="/dogProfile/{{_id}}/comment/new/">Add comment</a>
            <a href="/main/schedule/{{_id}}">Pet this dog</a>
            {{/if}}
        </div>
    </article>
</div>